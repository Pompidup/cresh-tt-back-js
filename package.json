{
  "name": "cresh-tt-backend",
  "version": "1.0.0",
  "description": "Cresh Technical Test Backend",
  "main": "build/server.js",
  "scripts": {
    "build": "tsc",
    "eslint": "eslint src --ext .ts",
    "prepare": "husky install",
    "preinstall": "npx only-allow yarn",
    "start": "node build/server.js",
    "watch": "tsnd --respawn src/server.ts",
    "test": "jest --watchAll --collectCoverage"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.1",
    "dotenv": "^16.0.0",
    "envalid": "^7.3.1",
    "only-allow": "^1.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.0",
    "@types/node": "^17.0.31",
    "@types/request": "^2.48.8",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "eslint": "^7.32.0 || ^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.2",
    "husky": "^7.0.4",
    "jest": "^28.0.3",
    "jest-cli": "^28.0.3",
    "request": "^2.88.2",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.4",
    "validate-branch-name": "^1.3.0"
  },
  "validate-branch-name": {
    "pattern": "^(feat|fix|chore)-([\\w-]+)$",
    "errorMsg": "Allowed branch name format: <feat|fix|chore>-my-branch-name"
  }
}
